<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.edu.ifsp.scl.sdm.gerenciadorfinanceiro">

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".presentation.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.account.AccountAddActivity"
            android:label="@string/add_account"
            android:parentActivityName=".presentation.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.account.AccountDetailsActivity"
            android:label="@string/account_details"
            android:parentActivityName=".presentation.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.transaction.TransactionAddActivity"
            android:label="@string/add_transaction"
            android:parentActivityName=".presentation.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".presentation.transaction.TransactionDetailsActivity"
            android:label="@string/transaction_details"
            android:parentActivityName=".presentation.MainActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>